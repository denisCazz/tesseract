---
import BaseLayout from '../../layouts/BaseLayout.astro';
---
<BaseLayout pageTitle="Contact">
  <!-- Hero Section -->
  <header class="bg-gradient-to-r from-green-600 to-teal-500 text-white py-16">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
      <p class="text-lg">
        Weâ€™re here to answer any questions. Get in touch with us!
      </p>
    </div>
  </header>

  <!-- Contact Form Section -->
  <main class="py-12 bg-gray-50">
    <section class="container mx-auto px-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Send Us a Message</h2>
      <form class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow">
        <div class="mb-4">
          <label for="name" class="block text-gray-700 font-medium">Name</label>
          <input type="text" id="name" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-teal-500" placeholder="Your name" />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-700 font-medium">Email</label>
          <input type="email" id="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-teal-500" placeholder="Your email" />
        </div>
        <div class="mb-4">
          <label for="message" class="block text-gray-700 font-medium">Message</label>
          <textarea id="message" rows="4" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-teal-500" placeholder="Your message"></textarea>
        </div>
        <button type="submit" class="w-full bg-teal-500 text-white py-2 rounded-lg hover:bg-teal-600 transition-all">
          Send Message
        </button>
      </form>
    </section>
  </main>
</BaseLayout>
