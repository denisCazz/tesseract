<script>
  // Selettore lingua
  const langDropdown = document.getElementById('lang-dropdown');
  const selectedLang = document.getElementById('selected-lang');
  const langButtons = langDropdown?.querySelectorAll('button');

  // Mostra/Nascondi dropdown
  selectedLang?.parentElement?.addEventListener('click', () => {
    langDropdown?.classList.toggle('hidden');
  });

  // Cambia lingua
  langButtons?.forEach(button => {
    button.addEventListener('click', () => {
      const lang = button.getAttribute('data-lang');
      let url = updateLang(lang);

      if (lang === 'it') {
        selectedLang.textContent = 'IT';
      } else {
        selectedLang.textContent = 'EN';
      }

      langDropdown?.classList.add('hidden');

      // Salva la lingua selezionata
      localStorage.setItem('lang', lang);

      // Aggiorna la lingua
      if(url) {
        window.location.href = url;
      }

    });
  });

  //Al caricamento del documento, controlla se la lingua Ã¨ stata salvata in localStorage
  document.addEventListener('DOMContentLoaded', () => {
    const lang = localStorage.getItem('lang');
    console.log(lang);
    if (lang) {
      selectedLang.textContent = lang.toUpperCase();
      let url = updateLang(lang);
      let actualUrl = window.location.href;
      console.log(url, actualUrl);
      if(url !== actualUrl) {
        window.location.href = url;
      }
    }
  });

  function updateLang(lang:string) {

    const notSelLang = lang === 'it' ? 'en' : 'it';
    let url = window.location.href;
    let newUrl = url;

    // Aggiungi una barra finale all'URL se non presente
    if (!url.endsWith('/')) {
        url += '/';
    }

    // Verifica se l'URL contiene il segmento di lingua da sostituire
    if (url.includes(`/${notSelLang}/`)) {
        const newUrl = url.replace(`/${notSelLang}/`, `/${lang}/`);
    }

    return newUrl;
  }
</script>