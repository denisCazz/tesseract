    <!-- Logo -->
    <a href="/" class="text-2xl font-bold hover:text-indigo-500 transition">
      AI Consulenza
    </a>

    <!-- Menu Links -->
    <ul class="hidden md:flex space-x-6">
      <li><a href="/" class="hover:text-indigo-500 transition">Home</a></li>
      <li><a href="/services" class="hover:text-indigo-500 transition">Servizi</a></li>
      <li><a href="/about" class="hover:text-indigo-500 transition">Chi Siamo</a></li>
      <li><a href="/contact" class="hover:text-indigo-500 transition">Contatti</a></li>
    </ul>

    <!-- Actions -->
    <div class="flex items-center space-x-4">
      <!-- Language Selector -->
      <div class="relative group">
        <button 
          class="flex items-center space-x-2 bg-gray-100 dark:bg-gray-800 px-4 py-2 rounded-lg shadow hover:shadow-md transition">
          <span id="selected-lang" class="text-sm">IT</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <ul 
          id="lang-dropdown" 
          class="absolute right-0 mt-2 w-20 bg-white dark:bg-gray-800 text-sm text-gray-800 dark:text-gray-200 rounded-lg shadow-lg hidden">
          <li><button class="w-full text-left px-4 py-2 hover:bg-indigo-100 dark:hover:bg-indigo-500" data-lang="IT">IT</button></li>
          <li><button class="w-full text-left px-4 py-2 hover:bg-indigo-100 dark:hover:bg-indigo-500" data-lang="EN">EN</button></li>
        </ul>
      </div>

      <!-- Theme Toggle -->
      <button 
        id="theme-toggle" 
        class="bg-gray-100 dark:bg-gray-800 p-2 rounded-lg shadow hover:shadow-md transition">
        <svg id="theme-toggle-light-icon" class="w-6 h-6 hidden" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
